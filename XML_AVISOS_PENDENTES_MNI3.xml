<!--
  EXEMPLO DE XML ENVIADO PARA CONSULTAR AVISOS PENDENTES - MNI 3.0

  Este é o XML que será montado e enviado para o serviço consultarAvisosPendentes
  do MNI 3.0 quando você clica em "Atualizar" em "Avisos Pendentes" selecionando
  "Execução Fiscal".

  Baseado na documentação oficial (pergunta.txt)
-->

<soapenv:Envelope
    xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/"
    xmlns:v300="http://www.cnj.jus.br/mni/v300/"
    xmlns:tip="http://www.cnj.jus.br/mni/v300/tipos-servico-intercomunicacao"
    xmlns:int="http://www.cnj.jus.br/mni/v300/intercomunicacao">

  <soapenv:Header/>

  <soapenv:Body>
    <v300:requisicaoConsultarAvisosPendentes>

      <!-- AUTENTICAÇÃO SIMPLES -->
      <tip:consultante>
        <int:autenticacaoSimples>
          <int:usuario>SEU_USUARIO_AQUI</int:usuario>
          <int:senha>HASH_SHA256_COM_DATA_AQUI</int:senha>
        </int:autenticacaoSimples>
      </tip:consultante>

      <!-- TIPO DE PENDÊNCIA: PC = Pendente de Ciência (Aguardando Abertura) -->
      <!-- Valores possíveis: PC (Pendente de Ciência), PR (Pendente de Resposta), AM (Ambos) -->
      <tip:tipoPendencia>PC</tip:tipoPendencia>

      <!-- PARÂMETROS ADICIONAIS OBRIGATÓRIOS -->
      <!-- todosPrazos: true = retorna prazos aguardando + já abertos -->
      <tip:outroParametro nome="todosPrazos" valor="true"/>

      <!-- informacoesDetalhadas: true = retorna fields como identificadorMovimento, descricaoMovimento, etc -->
      <tip:outroParametro nome="informacoesDetalhadas" valor="true"/>

      <!-- OPCIONAL: Filtro de avisos por tipo (CIT, INT, IDP, IDC, IAD, IST, IAC, NOT, VIS, URG, PTA) -->
      <!-- <tip:tiposAviso>CIT</tip:tiposAviso>  -->

    </v300:requisicaoConsultarAvisosPendentes>
  </soapenv:Body>

</soapenv:Envelope>


